<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8"
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="with=device-width, initial-scale=1.0">
  <title>Registro - Hotel App</title>
  <script async type="text/javascript" src="./src/bd.js"></script>
  <script async type="text/javascript" src="/public/js/script.js"></script>
  <link rel="stylesheet" href="resources/css/styles.css">
</head>
<body>
  <div class="registrer-form">
    <h1>Regístrate</h1>
    <form action="/registro" method="POST">
        <label for="user">Nombre de usuario</label>
        <input type="text" name="name" required>

        <label for="user">Correo</label>
        <input type="text" name="user" required>

        <label for="pass"> Contraseña</label>
        <input type="password" name="pass" required>

        <div style="display: inline;">
            <a href="/" class="bnt-cancel">Cancelar</a><input type="submit" class="btn-save" value="Guardar">
            
        </div>
    </form>
  </div>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
  <% if(typeof alert != "undefined") { %>
    <script>
      Swal.fire({
        title: '<%= alertTitle %>',
        text: '<%= alertMessage %>',
        icon:'<%= alertIcon %>',
        showConfirmButton: <%= showConfirmButton %>,
        timer: <%= timer %>
      }).then(()=>{
        window.location = '/ <%= ruta %>'
      })
    </script>
  <% } %>
</body>
</html>
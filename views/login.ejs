<!DOCTYPE html>
<html>
<head>
  <title>Inicio de sesión - Hotel App</title>
  <script async type="text/javascript" src="./src/bd.js"></script>
  <script async type="text/javascript" src="/public/js/script.js"></script>
  <link rel="stylesheet" href="resources/css/styles.css">
</head>
<body>
  <div class="login-form">
    <h2>Iniciar sesión</h2>
    <form action="/auth" method="POST">
      <label for="username">Usuario:</label>
     <input type="text" id="username" name="user">

      <label for="password">Contraseña:</label>
      <input type="password" id="password" name="pass">

      <input type="submit" class="btn-login" value="Login">
    </form>
    <p id="message"></p>
    <a href="registro" class="btn-registrer">Registrarse</a>
  </div>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
  <% if(typeof alert != "undefined") { %>
    <script>
      Swal.fire({
        title: '<%= alertTitle %>',
        text: '<%= alertMessage %>',
        icon:'<%= alertIcon %>',
        showConfirmButton: <%= showConfirmButton %>,
        timer: <%= timer %>
      }).then(()=>{
        window.location = '/<%= ruta %>'
      })
    </script>
  <% } %>
</body>
</html>
